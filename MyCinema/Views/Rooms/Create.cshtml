@model MyCinema.Models.Rooms

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_MenuAdmin.cshtml";
}
<meta charset="UTF-8">
<meta content="width=device-width, initial-scale=1.0" name="viewport">
<meta content="ie=edge" http-equiv="X-UA-Compatible">

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
<link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,500,600,700,700i" rel="stylesheet">
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" type="text/css" rel="stylesheet"
      media="screen" />
<link href="../StyleSheets/timingfield.css" type="text/css" rel="stylesheet" media="screen" />
<link media="screen" rel="stylesheet" type="text/css" href="../Content/admin-menu-ip/admin-menu-ip.css">
<link media="screen" rel="stylesheet" type="text/css" href="../Content/admin-movies-add-ip.css">

<title>MyCinema Admin Panel | Rooms</title>


<body>
    <div class="main">
        <h2 class="title">Add Room</h2>
       
        <div class="add-movie-div">
            <form action="@Url.Action("Create", "Rooms")" method="POST" enctype="multipart/form-data" class="add-movie-form">
                <p>Room Name</p>
                <input type="text" name="Name">
                <p>Room Image | 1</p>
                <input type="file" accept="image/*" name="Image1">
                <p>Room Image | 2</p>
                <input type="file" accept="image/*" name="Image2">
                <p>Room Image | 3</p>
                <input type="file" accept="image/*" name="Image3">
                <p>Room Image | 4</p>
                <input type="file" accept="image/*" name="Image4">
                <button class="buttons-movie" id="modal-button-add" type="submit">Add Room</button>
                <input class="buttons-movie" type="button" onclick="location.href='@Url.Action("IndexAdmin", "Rooms")'" value="Back to Rooms" />
            </form>
        </div>
    </div>

</body>


<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
