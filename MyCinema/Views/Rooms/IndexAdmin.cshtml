@model IEnumerable<MyCinema.Models.Rooms>

@{

    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MenuAdmin.cshtml";


}


<link href="/Content/timingfield/timingfield.css" type="text/css" rel="stylesheet" media="screen" />
<link media="screen" rel="stylesheet" type="text/css" href="/Content/admin-menu-ip.css">
<link media="screen" rel="stylesheet" type="text/css" href="/Content/admin-movies-ip.css">



<title>MyCinema | Rooms</title>

<div class="main">
    <h2 class="title">Admin | Rooms</h2>
   
    <div class="main-container">



        <div class="buttons-top">
            <a class="buttons-movie" href="@Url.Action("Create", "Rooms" )" onclick="currentMenu()">
                Add Room
            </a>
            



        </div>


        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.RoomName)
                </th>

                <th>
                    Image1
                </th>

                <th>
                    Image2
                </th>

                <th>
                    Image3
                </th>
                <th>
                    Image4
                </th>
                <th>Delete</th>
                <th>Modify</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.RoomName)
                    </td>

                    <td>
                        @if (item.Image1 != null)

                        {
                            string imageSource = $"data:image;base64,{Convert.ToBase64String(item.Image1)}";

                            <img src="@imageSource" style="width:90px;height:110px;" />
                        }


                    </td>

                    <td>
                        @if (item.Image2 != null)

                        {
                            string imageSource = $"data:image;base64,{Convert.ToBase64String(item.Image2)}";

                            <img src="@imageSource" style="width:90px;height:110px;" />
                        }


                    </td>

                    <td>
                        @if (item.Image3 != null)

                        {
                            string imageSource = $"data:image;base64,{Convert.ToBase64String(item.Image3)}";

                            <img src="@imageSource" style="width:90px;height:110px;" />
                        }


                    </td>

                    <td>
                        @if (item.Image4 != null)

                        {
                            string imageSource = $"data:image;base64,{Convert.ToBase64String(item.Image4)}";

                            <img src="@imageSource" style="width:90px;height:110px;" />
                        }


                    </td>

                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.RoomId })


                    </td>

                    <td>
                        @Html.ActionLink("Delete", "Delete", new { id = item.RoomId })
                    </td>
                </tr>
            }

        </table>


    </div>
</div>

<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
<script src="../Scripts/script.js"></script>
<script src="../Scripts/admin-movies-ip.js"></script>
<script src="../Scripts/alert.js"></script>
<script src="/Scripts/slideshow.js"></script>
