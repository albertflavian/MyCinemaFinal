@model MyCinema.Models.Movies

@{
    /**/

    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_MenuAdmin.cshtml";
}
<meta charset="UTF-8">
<meta content="width=device-width, initial-scale=1.0" name="viewport">
<meta content="ie=edge" http-equiv="X-UA-Compatible">

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
<link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,500,600,700,700i" rel="stylesheet">
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" type="text/css" rel="stylesheet"
      media="screen" />
<link href="../StyleSheets/timingfield.css" type="text/css" rel="stylesheet" media="screen" />
<link media="screen" rel="stylesheet" type="text/css" href="../Content/admin-menu-ip/admin-menu-ip.css">
<link media="screen" rel="stylesheet" type="text/css" href="../Content/admin-movies-add-ip.css">

<title>MyCinema Admin Panel | Movies</title>


    <body>
        <div class="main">
            <h2 class="title">Add Movie</h2>
            <div class="alert alert-danger">
               
            </div>
            <div class="add-movie-div">
                <form action="@Url.Action("Create", "Movies")" method="POST" enctype="multipart/form-data" class="add-movie-form">
                    <p>Movie Name</p>
                    <input type="text" name="Name">
                    <p>Movie Price</p>
                    <input type="text" name="Price">
                    <p>Movie Duration</p>
                    <input type="text" required class="timing" name="Duration" />
                    <p>Movie Image</p>
                    <input type="file" accept="image/*" name="Image">
                    <button class="buttons-movie" id="modal-button-add" type="submit">Add Movie</button>
                    <button class="buttons-movie" type="button" onclick=@Url.Action("IndexAdmin", "Movies")>Back to Movies</button>
                   
                </form>
            </div>
        </div>

    </body>


<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
<script src="../Scripts/timingfield.js"></script>
<script src="../scripts-common/script.js"></script>
<script type="text/javascript">
    jQuery(document).ready(function ($) {
        $(".timing").timingfield();
    });
</script>
<script src="../scripts-common/alert.js"></script>
