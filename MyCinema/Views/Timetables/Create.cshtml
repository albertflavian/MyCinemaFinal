@model MyCinema.Models.Timetable

@{
    ViewBag.Title = "Create";
    List<MyCinema.Models.Movies> Movies = ViewBag.Movies;
    List<MyCinema.Models.Rooms> Rooms = ViewBag.Rooms;
    Layout = "~/Views/Shared/_MenuAdmin.cshtml";
}


    

<meta charset="UTF-8">
<meta content="width=device-width, initial-scale=1.0" name="viewport">
<meta content="ie=edge" http-equiv="X-UA-Compatible">

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
<link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,500,600,700,700i" rel="stylesheet">
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" type="text/css" rel="stylesheet"
      media="screen" />
<link href="../StyleSheets/timingfield.css" type="text/css" rel="stylesheet" media="screen" />
<link media="screen" rel="stylesheet" type="text/css" href="../Content/admin-menu-ip/admin-menu-ip.css">
<link media="screen" rel="stylesheet" type="text/css" href="../Content/admin-movies-add-ip.css">

<title>MyCinema Admin Panel | Program</title>


<body>
    <div class="main">
        <h2 class="title">Add Program</h2>

        <div class="add-movie-div">


            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4>Timetable</h4>
                    <hr />


                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        <label asp-for="MovieId" class="control-label col-md-2">Movie</label>
                        <div class="col-md-10">

                            <select asp-for="MovieId" class="form-control" name="MovieId">
                                @foreach (var Item in Movies)
                                {
                                    <option value="@Item.MovieId"> @Item.Name</option>
                                }
                            </select>

                            @Html.ValidationMessageFor(model => model.MovieId, "", new { @class = "text-danger" })
                        </div>
                    </div>




                    <div class="form-group">
                        <label asp-for="RoomId" class="control-label col-md-2">Room</label>
                        <div class="col-md-10">

                            <select asp-for="RoomId" class="form-control" name="RoomId">
                                @foreach (var Item in Rooms)
                                {
                                    <option value="@Item.RoomId"> @Item.RoomName</option>
                                }
                            </select>
                            @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control" } })

                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.StartTime, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.StartTime, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.StartTime, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <button class="buttons-movie" id="modal-button-add" type="submit">Add Program</button>
                        <input class="buttons-movie" type="button" onclick="location.href='@Url.Action("Index", "Timetables")'" value="Back to Rooms" />
                    </div>
                </div>
            }
        </div>
    </div>

</body>


<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
<script src="../Scripts/timingfield.js"></script>
<script src="../scripts-common/script.js"></script>

<script src="../scripts-common/alert.js"></script>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
