@model MyCinema.Models.ChangeAccountDetailsModel

@{
    ViewBag.Title = "Settings";
    Layout = "/Views/Shared/_Menu.cshtml";
}



<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="../StyleSheets/Settings.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
          integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,500,600,700,700i" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
   


    <title>My Cinema | Settings</title>
</head>
<body>
    <div class="container" style="width:100%; height:auto; min-width: 90%;" >

        <div class="settingsContainer" >
            <h1 class="Title">Settings</h1>
            <div class="settings">
                <div class="settingsLeftSide">

                    <div class="image-details" style="display:flex;">
                        <div class="image-part">

                            <img src="../images/john-doe.png" alt="" class="profile">

                        </div>
                       
                        <div class="name" style="float:left;">
                            <h3>@ViewBag.FirstName @ViewBag.LastName</h3>
                        </div>
                        @{ 
                            DateTime bday =  ViewBag.BirthDay;

                        }

                    </div>
                    <div class="details-part" >
                        <div class="details">
                            <h5>First Name</h5>
                            <p>@ViewBag.FirstName</p>
                        </div>

                        <div class="details">
                            <h5>Last Name</h5>
                            <p>@ViewBag.LastName</p>
                        </div>

                        <div class="details">
                            <h5>E-mail</h5>
                            <p>@ViewBag.Email</p>
                        </div>

                        <div class="details">
                            <h5>Phone</h5>
                            <p>@ViewBag.PhoneNumber</p>
                        </div>

                        <div class="details">
                            <h5>Birthdate</h5>
                            <p>@bday.ToString("dd/MM/yyyy")</p>
                        </div>

                    </div>

                </div>
                <div class="settingsRightSide">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "" })
                        <div class="field">
                            @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { type = "text", name = "LastName", placeholder = "First Name", value = "@ViewBag.FirstName.toString()", @class = "formField" } })
                            @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "formField" })
                            <label name="settings"></label>
                        </div>

                        <div class="field">
                            @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { type = "text", name = "LastName", placeholder = "Last Name", @class = "formField" } })
                            @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "formField" })
                            <label name="settings"></label>

                        </div>

                        <div class="field">
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { type = "email", name = "Email", placeholder = "Email Address", @class = "formField" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "formField" })
                            <label name="settings"> </label>
                        </div>

                        <div class="field">
                            @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { type = "tel", pattern = "([0-9]{4}) [0-9]{3} [0-9]{3}", name = "PhoneNumber", placeholder = "Phone Number", @class = "formField" } })
                            @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "formField" })
                            <label name="settings"></label>
                        </div>

                        /*  <div class="field">
                              @Html.EditorFor(model => model.BirthDay, new { htmlAttributes = new { name = "BirthDay", placeholder = "Enter your BirthDay",value="@model.BirthDay", @class = "formField" } })
                              @Html.ValidationMessageFor(model => model.BirthDay, "", new { @class = "formField" })
                              <label name="settings">Birthdate</label>
                          </div>
                          */
                        <div class="field">
                            <input class="formField text-box single-line" data-val="true" data-val-date="The field BirthDay must be a date." data-val-required="The BirthDay field is required." id="BirthDay" name="BirthDay" placeholder="Enter your BirthDay" type="date" value="@bday.ToString("yyyy-MM-dd")" />
                            <span class="field-validation-valid formField" data-valmsg-for="BirthDay" data-valmsg-replace="true"></span>
                            <label name="settings" style="  color: gray;   font-size: 16px; font-style: normal;">Birthdate</label>
                        </div>
 
                        <div class="field">
                            @Html.EditorFor(model => model.NewPassword, new { htmlAttributes = new { name = "NewPassword", placeholder = "New Password", @class = "formField" } })
                            @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "formField" })
                            <label name="settings"></label>
                        </div>

                        <div class="form-buttons-container">
                          
                            <input class="saveBtn" type="submit" value="Change profile" />

                        </div>

                    }
                    <br />
                  

                </div>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
            integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
            crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
            integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
            crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
            integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
            crossorigin="anonymous"></script>
    <script src="../Scripts/js/scriptSettings.js"></script>
</body>
</html>

